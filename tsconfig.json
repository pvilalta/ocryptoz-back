{
    "compilerOnSave": true,
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2015"
        ],
        "noEmitOnError": true, // does not compil if there is an error in TS
        "strictNullChecks": true,
        "strict": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true
    }
}